# ============================================
# M365 License Optimizer - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=m365_optimizer
POSTGRES_USER=admin
POSTGRES_PASSWORD=SecurePass123!ChangeMe

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=RedisSecurePass456!ChangeMe

# ============================================
# PgAdmin Configuration (Optional)
# ============================================
PGADMIN_EMAIL=admin@m365optimizer.local
PGADMIN_PASSWORD=PgAdminPass789!ChangeMe

# ============================================
# Application Configuration (for future lots)
# ============================================

# Azure AD Configuration (Partner Tenant)
# AZURE_AD_TENANT_ID=your-partner-tenant-id
# AZURE_AD_CLIENT_ID=your-backend-client-id
# AZURE_AD_CLIENT_SECRET=your-backend-client-secret

# Partner Center Configuration
# PC_TENANT_ID=your-partner-tenant-id
# PC_CLIENT_ID=your-partner-center-client-id
# PC_CLIENT_SECRET=your-partner-center-client-secret

# Backend Configuration
# BACKEND_HOST=0.0.0.0
# BACKEND_PORT=8000
# DEBUG=true
# LOG_LEVEL=INFO

# Frontend Configuration
# REACT_APP_API_URL=http://localhost:8000
# REACT_APP_AZURE_AD_CLIENT_ID=your-frontend-client-id
# REACT_APP_AZURE_AD_TENANT_ID=your-partner-tenant-id

# Database Connection String (for backend)
# DATABASE_URL=postgresql://admin:SecurePass123!ChangeMe@localhost:5432/m365_optimizer

# Redis Connection String (for backend)
# REDIS_URL=redis://:RedisSecurePass456!ChangeMe@localhost:6379/0

# Security
# JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
# ENCRYPTION_KEY=your-fernet-encryption-key

# ============================================
# Azure Deployment Configuration (Optional)
# ============================================

# Azure PostgreSQL
# AZURE_POSTGRES_SERVER=m365optimizerdb.postgres.database.azure.com
# AZURE_POSTGRES_DB=m365_optimizer
# AZURE_POSTGRES_USER=admin@m365optimizerdb
# AZURE_POSTGRES_PASSWORD=SecurePass123!ChangeMe

# Azure Redis Cache
# AZURE_REDIS_HOST=m365optimizerredis.redis.cache.windows.net
# AZURE_REDIS_PORT=6380
# AZURE_REDIS_PASSWORD=your-azure-redis-primary-key
# AZURE_REDIS_SSL=true

# Azure Resource Group
# AZURE_RESOURCE_GROUP=m365-optimizer-dev
# AZURE_LOCATION=westeurope
