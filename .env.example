# ============================================
# M365 License Optimizer - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=m365_optimizer
POSTGRES_USER=admin
POSTGRES_PASSWORD=SecurePass123!ChangeMe
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=RedisSecurePass456!ChangeMe
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# PgAdmin Configuration (Optional)
# ============================================
PGADMIN_EMAIL=admin@m365optimizer.local
PGADMIN_PASSWORD=PgAdminPass789!ChangeMe

# ============================================
# Application Configuration (for future lots)
# ============================================

# Azure AD Configuration (Partner Tenant) - REQUIRED
AZURE_AD_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_AD_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_AD_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE

# Partner Center Configuration
# PC_TENANT_ID=your-partner-tenant-id
# PC_CLIENT_ID=your-partner-center-client-id
# PC_CLIENT_SECRET=your-partner-center-client-secret

# Backend Configuration (optional - most have defaults in config.py)
# BACKEND_HOST=0.0.0.0
# BACKEND_PORT=8000
# DEBUG=true

# Frontend Configuration
# REACT_APP_API_URL=http://localhost:8000
# REACT_APP_AZURE_AD_CLIENT_ID=your-frontend-client-id
# REACT_APP_AZURE_AD_TENANT_ID=your-partner-tenant-id

# Database Connection String (for backend)
DATABASE_URL=postgresql+asyncpg://admin:SecurePass123!ChangeMe@localhost:5432/m365_optimizer

# Redis Connection String (for backend)
# REDIS_URL=redis://:RedisSecurePass456!ChangeMe@localhost:6379/0

# Security - REQUIRED
JWT_SECRET_KEY=CHANGE_ME_TO_A_RANDOM_SECRET_KEY_MIN_32_CHARS_LONG_PLEASE

# Encryption Key for Client Secrets (LOT4) - REQUIRED
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_TO_FERNET_KEY_32_BYTES_BASE64_ENCODED

# ============================================
# Microsoft Graph Configuration (LOT4)
# ============================================
GRAPH_API_BASE_URL=https://graph.microsoft.com/v1.0
GRAPH_API_BETA_URL=https://graph.microsoft.com/beta
GRAPH_API_AUTHORITY=https://login.microsoftonline.com

# Retry Configuration
GRAPH_MAX_RETRIES=3
GRAPH_RETRY_BACKOFF_FACTOR=2
GRAPH_REQUEST_TIMEOUT=30

# ============================================
# Azure Deployment Configuration (Optional)
# ============================================

# Azure PostgreSQL
# AZURE_POSTGRES_SERVER=m365optimizerdb.postgres.database.azure.com
